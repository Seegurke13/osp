{% extends 'base.html.twig' %}

{% block body %}
    <div class="main container-fluid">
        <div class="row">
            <nav class="nav-tags col-md-2">
                <ul>
                    {% for tag in tags %}
                        <li>
                            <a href="{{ tag.getUrl() }}">{{ tag.getName() }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </nav>

            <div class="content col-md-10">
                {% block content %}
                {% endblock content %}
            </div>
        </div>
    </div>
{% endblock body %}